<!DOCTYPE html>
<html lang="zh">

<head>
    <title>Elife</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/stylesheets/supplier/order_detail.css">
</head>

<body>
    <div class="navbar-header">
        <div class="navbar-brand pull-right">
            <img src="/images/logo.png" alt="Brand Image">
        </div>
        <div id="main">
            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true" style="font-size:30px;color:#6F916F;"></span>
        </div>
    </div>
    <div class="container">
        <div class="row content">
            <div class="col-sm-1"></div>
            <div class="col-sm-10 text-center">
                <h1>訂單明細</h1>
                <h3><%= date %> <%= time %></h3>
                <br>
                <table class="table">
                    <thead>
                        <tr>
                            <th>商品</th>
                            <th>單價</th>
                            <th>數量</th>
                            <th>小計</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orderList.forEach(function(order) { %>
                            <tr>
                                <td>
                                    <%= order.name %>
                                </td>
                                <td>
                                    <%= order.price %>
                                </td>
                                <td>
                                    <%= order.quantity %>
                                </td>
                                <td>
                                    <%= order.total %>
                                </td>
                            </tr>
                            <% }) %>
                                <tr style="color:red">
                                    <td><strong>總金額(元):</strong></td>
                                    <td></td>
                                    <td></td>
                                    <td><strong><%= sum %></strong></td>
                                </tr>
                    </tbody>
                </table>
                <br>
                <div>
                    <a href="/order">
                        <button type="button" class="btn btn-success btn-lg" id="return">
                            返回
                        </button>
                    </a>
                </div>
            </div>
            <div class="col-sm-1"></div>
        </div>
    </div>
</body>

</html>
