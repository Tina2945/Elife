<!DOCTYPE html>
<html lang="en">

<head>
    <title>店家註冊</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/supplier/supplier.css">
    <script>
    $(function() {
        $("#photo").change(function() {
            if (this.files && this.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#preview').attr('src', e.target.result);
                }
                reader.readAsDataURL(this.files[0]);
            }
        });
    });
    </script>
</head>
<body>
    <div class="navbar-header">
        <div class="navbar-brand pull-right">
            <img src="/images/logo.png" alt="Brand Image">
        </div>
        <div id="main">
            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true" style="font-size:30px;color:#6F916F;"></span>
        </div>
    </div>
    <div class="container">
        <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <h1>店家帳號</h1>
                <hr>
                <form action="/supplier" method="POST" enctype="multipart/form-data" novalidate>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label for="storeName">店名:</label>
                            <input type="text" placeholder="請輸入店名" id="storeName" name="storeName">
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label for="photo">店家圖片:</label>
                            <input type="file" accept="image/*" capture="camera" id="photo" name="photo">
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <img id="preview" src="#" class="img-responsive" alt="圖片" style="width:200px;height:200px;border:1px solid #6F916F;border-radius:6px;">
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label for="name">姓名:</label>
                            <input type="text" placeholder="請輸入姓名" id="name" name="name">
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label for="phonenum">電話:</label>
                            <input type="text" placeholder="請輸入電話" id="phonenum" name="phonenum">
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label for="city">地址:</label>
                            <select required="required" id="city" name="city">
                                <option class="active" style="width: 200px;">縣市</option>
                                <% district.forEach(function(district) { %>
                                    <option>
                                        <%= district.city %>
                                            <%= district.town %>
                                    </option>
                                    <%  }); %>
                            </select>
                            <input type="text" required="required" placeholder="請輸入村里" id="hometown" name="hometown">
                            <input type="text" required="required" placeholder="請輸入地址" id="address" name="address">
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label for="card">信用卡號碼:</label>
                            <input type="text" placeholder="請輸入第一欄 (4位數)" id="card" name="card1">
                            <input type="text" placeholder="請輸入第二欄 (4位數)" name="card2">
                            <input type="text" placeholder="請輸入第三欄 (4位數)" name="card3">
                            <input type="text" placeholder="請輸入第四欄 (4位數)" name="card4">
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label for="account">帳號:</label>
                            <input type="text" placeholder="請設定帳號" id="account" name="account">
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label for="password">密碼:</label>
                            <input type="text" placeholder="請設定密碼" id="password" name="password">
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12">
                            <button type="submit" class="btn btn-default btn-lg">確定</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
