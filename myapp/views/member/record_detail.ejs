<!DOCTYPE html>
<html lang="zh">

<head>
    <title>Elife</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/stylesheets/member/record_detail.css">
</head>

<body>
    <% if(member) { %>
        <div class="navbar-header">
            <div class="navbar-brand pull-right">
                <img src="/images/logo.png" alt="Brand Image">
            </div>
            <div id="mySidenav" class="sidenav sidenav-hover">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <br>
                <h3>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= member.name %>, 您好!</h3>
                <a href="/home"><span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;首頁</a>
                <a href="/shopping_cart"><span class="glyphicon glyphicon-shopping-cart"></span>&nbsp;&nbsp;購物車</a>
                <a href="/purchase_rec"><span class="glyphicon glyphicon-list-alt"></span>&nbsp;&nbsp;購買紀錄</a>
                <a href="/personal_info"><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;個人資料</a>
                <form action="/register/logout" method="POST">
                    <a><span class="glyphicon glyphicon-log-out"></span>&nbsp;&nbsp;<input id="logout" type="submit" value="登出"></a>
                </form>
            </div>
            <div id="main">
                <span style="font-size:30px;cursor:pointer;color:white" onclick="openNav()">&#9776; 
                </span>
            </div>
        </div>
        <div class="container">
            <div class="row content">
                <div class="col-sm-12 text-center">
                    <h1><%= date %> 紀錄</h1>
                    <br>
                    <div class="container">
                        <table class="table" style="font-size: 20px">
                            <thead>
                                <tr>
                                    <th>Store</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Quan</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recordList.forEach(function(record) { %>
                                    <tr>
                                        <td>
                                            <%= record.supplier.storeName %>
                                        </td>
                                        <td>
                                            <%= record.product.name %>
                                        </td>
                                        <td>
                                            <%= record.price %>
                                        </td>
                                        <td>
                                            <%= record.quantity %>
                                        </td>
                                        <td>
                                            <%= record.total %>
                                        </td>
                                        <td>
                                            <% if(record.status) { %>
                                                已簽收
                                                <% } else { %>
                                                    未簽收
                                                    <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                        <h3 class="text-center" style="color: #EE4035">總金額$元</h3>
                        <br>
                        <div>
                            <a href="/purchase_rec">
                                <button type="button" class="btn btn-success btn-lg">
                                    <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> 返回
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
            function openNav() {
                document.getElementById("mySidenav").style.width = "250px";
            }

            function closeNav() {
                document.getElementById("mySidenav").style.width = "0";
            }
            </script>
</body>

</html>
